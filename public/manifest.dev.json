{
  "manifest_version": 2,
  "name": "[DEVELOPMENT] Just proxy",
  "description": "A simple proxy tool",
  "version": "1.0.3",
  "permissions": ["proxy", "storage", "tabs", "management"],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "64": "icon.png"
  },
  "options_page": "index.html",
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
